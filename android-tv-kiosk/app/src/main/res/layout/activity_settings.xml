        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gast-Name"
            android:textSize="20sp"
            android:textColor="#94a3b8"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_guest_name"
            android:layout_width="match_parent"
